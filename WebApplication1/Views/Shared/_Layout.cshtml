@using dihiddieDiary.Controllers
@using dihiddieDiary.Helpers
@using dihiddieDiary.Resources
@using dihiddieDiary.Utilities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - dihiddie</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div id="tabs" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class='@Html.IsActive(nameof(DiaryController).RemoveController(), nameof(DiaryController.Index))'>@Html.ActionLink(SharedResources.Diary, nameof(DiaryController.Index), nameof(DiaryController).RemoveController())</li>
                <li class='@Html.IsActive(nameof(HomeController).RemoveController(), nameof(HomeController.Creation))'>@Html.ActionLink(SharedResources.Creation, nameof(HomeController.Creation), nameof(HomeController).RemoveController())</li>
                <li class='@Html.IsActive(nameof(HomeController).RemoveController(), nameof(HomeController.Contact))'>@Html.ActionLink(SharedResources.Inspiration, nameof(HomeController.Contact), nameof(HomeController).RemoveController())</li>
            </ul>
        </div>
    </div>
</div>

<div class="container body-content">
    @RenderBody()@*<hr/>
    <footer align="center">
        <p>&copy; @DateTime.Now.Year - dihiddie</p>
    </footer>*@
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>

